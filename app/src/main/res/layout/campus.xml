<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_campus_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_yellow"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_campus_topics"
            style="@style/campus_top_item"
            android:text="@string/campus_tab_topics" />
        <TextView
            android:id="@+id/tv_campus_life"
            style="@style/campus_top_item"
            android:text="@string/campus_tab_life" />
        <TextView
            android:id="@+id/tv_campus_news"
            style="@style/campus_top_item"
            android:text="@string/campus_tab_news" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

</LinearLayout>