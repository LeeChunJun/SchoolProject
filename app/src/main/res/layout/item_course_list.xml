<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:paddingLeft="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_course_time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_time"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"/>
        
        <TextView 
            android:id="@+id/tv_course_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:text="tv_course_time"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" 
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_course_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_course"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"/>
        
        <TextView 
            android:id="@+id/tv_course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:text="tv_course_name"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" 
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_course_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"/>
        
        <TextView 
            android:id="@+id/tv_course_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:text="tv_course_location"/>
        
    </LinearLayout>

</LinearLayout>
